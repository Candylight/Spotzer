<header class="container">
    {% if app.user != null %}
        <form action="{{ path('search') }}" method="post" class="col-md-3 recherche-container">
            <input type="text" name="keyword" class="recherche" id="lastFMSearch">
            <input type="submit" value="" id="searchSubmitButton">
        </form>
    {% endif %}
    <a class="col-md-6 title" href="{{ path('default') }}">
        Spötzer
    </a>
    <div class="col-md-3 plateformes">
        {% if app.user != null %}
            {% if app.user.credentials.spotifyToken != null %}
                <a href="{{ path('account') }}" title="Gérer la connexion Spotify">
                    <img src="{{ asset('img/header/plateformes/logo_spotify_white.png') }}" alt="" class="header-icon" id="spotify">
                </a>
            {% endif %}
            {% if app.user.credentials.deezerToken != null %}
                <a href="{{ path('account') }}" title="Gérer la connexion Deezer">
                    <img src="{{ asset('img/header/plateformes/logo_deezer_white.png') }}" alt="" class="header-icon" id="deezer">
                </a>
            {% endif %}
            {% if app.user.credentials.youtubeToken %}
                <a href="{{ path('account') }}" title="Gérer la connexion Youtube">
                    <img src="{{ asset('img/header/plateformes/logo_youtube_white.png') }}" alt="" class="header-icon" id="youtube">
                </a>
            {% endif %}
        {% endif %}
        <span class="header-icon" id="account" title="Last FM">
            <img src="{{ asset('img/search/lastFM-icon.png') }}" alt="">
        </span>
        <a href="{{ path('transfer') }}">
            <img src="{{ asset('img/global/icon-transfer.png') }}" alt="" title="Transfert de données">
        </a>
        <span class="header-icon" id="account" title="Votre compte">
            <img src="{{ asset('img/global/icon-account.png') }}" alt="">
        </span>
    </div>
</header>
<div class="popin-song">

</div>
<div class="popin">
    <div class="triangle"></div>
    <div class="inpopin">
        <a href="{{ path('account') }}">
            Mon compte
        </a>
        <br/>
        <a href="{{ path('logout') }}">
            Deconnexion
        </a>
    </div>
</div>
