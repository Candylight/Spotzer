{% extends 'base.html.twig' %}
{% block title %}Tableau de bord{% endblock %}
{% block body %}
    <div id="container-account">
        <div class="connexion-container container">
            <div class="title">
                {{ "account.platforms.title"|trans }} :
            </div>
            <div class="col-xs-4 part">
                <img class="logo {% if spotifyConnected == true %}active{% endif %}" src="{{ asset('img/header/plateformes/logo_spotify_white.png') }}" alt="Logo spotify blanc">
                <div class="title">
                    Spotify
                </div>
                {% if spotifyConnected == true %}
                    <a class="button disconnect" href="{{ path('spotify_logout') }}">{{ "account.platforms.disconnect"|trans }}</a>
                    <br/>
                    <a class="button" href="{{ path("dashboard_spotify") }}">
                        Mon dashboard Spotify
                    </a>
                {% else %}
                    <a class="button" href="{{ path('spotify_login') }}">{{ "account.platforms.connect"|trans }}</a>
                {% endif %}
            </div>
            <div class="col-xs-4 part">
                <img class="logo {% if deezerConnected == true %}active{% endif %}" src="{{ asset('img/header/plateformes/logo_deezer_white.png') }}" alt="Logo Deezer blanc">
                <div class="title">
                    Deezer
                </div>
                {% if deezerConnected == true %}
                    <a class="button disconnect" href="{{ path('deezer_logout') }}">{{ "account.platforms.disconnect"|trans }}</a>
                    <br/>
                    <a class="button" href="{{ path("dashboard_deezer") }}">
                        Mon dashboard Deezer
                    </a>
                {% else %}
                    <a class="button" href="{{ path('deezer_login') }}">{{ "account.platforms.connect"|trans }}</a>
                {% endif %}
            </div>
            <div class="col-xs-4 part">
                <img class="logo {% if youtubeConnected == true %}active{% endif %}" src="{{ asset('img/header/plateformes/logo_youtube_white.png') }}" alt="Logo Youtube blanc">
                <div class="title">
                    Youtube
                </div>
                {% if youtubeConnected == true %}
                    <a class="button disconnect" href="{{ path('youtube_logout') }}">{{ "account.platforms.disconnect"|trans }}</a>
                    <br/>
                    <a class="button" href="{{ path("dashboard_youtube") }}">
                        Mon dashboard Youtube
                    </a>
                {% else %}
                    <a class="button" href="{{ path('youtube_login') }}">{{ "account.platforms.connect"|trans }}</a>
                {% endif %}
            </div>
        </div>
        <div class="redirect-modify col-xs-4 offset-xs-4">
            <div class="title">
                Modifier votre compte et vos préférences
            </div>
            <a href="{{ path('account_modify') }}" class="button">
                Cliquez-ici
            </a>
        </div>
    </div>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/account.css') }}" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}