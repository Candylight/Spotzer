<div class="col-xs-12 horizontal-part">
    <div class="title col-xs-12">
        {{ "dashboard.youtube.videos.titleRecommandation"|trans }}
    </div>
    <div class="container container-videos">
        {% if recomVideos != false %}
            {% for recomVideo in recomVideos %}
                {% for item in recomVideo.items %}
                    <div class="parts">
                        <div class="image col-xs-12">
                            <img src="{{ item.snippet.thumbnails.default.url }}" alt="{{ item.snippet.title }}">
                        </div>
                        <div class="name col-xs-12">
                            {{ item.snippet.title[:18] }}
                        </div>
                        <button class="button video-link-popin" data-link="{{ item.id }}">Voir la vidéo</button>
                        <br/>
                        <button class="button playlist add-to-playlist" data-type="youtube" data-name="{{ item.snippet.title[:18] }}" data-id="{{ item.id }}">Ajouter à une playlist</button>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endif %}
    </div>
</div>