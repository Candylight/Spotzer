<div class="wikipedia container">
    <div class="part picture">
        {% if image != "" %}
            <img src="{{ image }}" alt="">
        {% endif %}
    </div>
    <div class="part content">
        <div class="icon">
            <a href="{{ link }}" title="Voir la page Wikipedia"><img src="{{ asset('img/search/wikipedia-icon.png') }}" alt=""></a>
        </div>
        <div class="description">
            {{ content }}
        </div>
    </div>
</div>