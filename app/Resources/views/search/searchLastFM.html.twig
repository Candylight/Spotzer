<div class="wikipedia container">
    {% if search != false %}
        <div class="value-search">
            {{ search.searchText }}
        </div>
        <div class="part picture">
            {% if search.urlImage != "" %}
                <img src="{{ search.urlImage }}" alt="">
            {% endif %}
        </div>
        <div class="part content">
            <div class="icon">
                <a target="_blank" href="{{ search.url }}" title="{{ "search.seeMoreOnLastFM"|trans }}"><img src="{{ asset('img/search/lastFM-icon.png') }}" alt=""></a>
            </div>
            <div class="description">
                {{ search.description }}
            </div>
        </div>
    {% else %}
        <div class="value-search">
            Votre recherche n'as renvoyé aucun résultat LastFM
        </div>
    {% endif %}
</div>