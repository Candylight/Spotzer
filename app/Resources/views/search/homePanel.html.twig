{% if search %}
    <div class="title">DÃ©couverte</div>
    <div class="lastfm container">
        <div class="value-search col-xs-12">
            {{ search.title }}
        </div>
        <div class="picture col-xs-3 part">
            {% if search.urlImage != "" %}
                <img src="{{ search.urlImage }}" alt="Image LastFM {{ search.title }}">
            {% endif %}
        </div>
        <div class="content col-xs-6 part">
            <div class="icon">
                <a target="_blank" href="{{ search.url }}" title="{{ "search.lastFM.seeMore"|trans }}"><img src="{{ asset('img/search/lastFM-icon.png') }}" alt="Logo Last FM"></a>
            </div>
            <div class="description">
                {{ search.description }}
            </div>
        </div>
        <div class="numbers col-xs-3 part">
            <div class="title">{{ "search.lastFM.tags.title"|trans }}</div>
            <div class="tags">
                {{ render(controller('AppBundle:LastFM:getTags',{"keyword":keyword})) }}
            </div>
        </div>
    </div>
{% else %}
    Aucun artiste pour le moment
{% endif %}
