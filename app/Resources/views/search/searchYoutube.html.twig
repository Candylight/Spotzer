
<div class="main-icon icon">
    <img src="{{ asset('img/search/youtube.png') }}" alt="">
</div>
<div class="list">
    {% if searches != false %}
        {% for items in searches %}
            <div class="{% if loop.index is even %}item {% else %} item odd {% endif %}">
                {% for key, item in items %}
                    <div class="image">
                        <img src="{{ item.snippet["thumbnails"]["default"]["url"] }}"
                             alt="{{ item.snippet["title"] }}">
                    </div>
                    <div class="content">
                        <div class="name">
                            <span class="artist">{{ item.snippet["title"] }}</span>
                        </div>
                        <div class="details">
                            {{ item.statistics["viewCount"] }} Vues
                            <img src="{{ asset('img/search/youtube-dislike.png') }}" alt="">
                            {% if item.statistics["dislikeCount"] is defined %}
                                {{ item.statistics["dislikeCount"] }}
                            {% else %}
                                0
                            {% endif %}
                            <img src="{{ asset('img/search/youtube-like.png') }}" alt="">
                            {% if  item.statistics["likeCount"]  is defined %}
                                {{ item.statistics["likeCount"] }}
                            {% else %}
                                0
                            {% endif %}
                            <br/>
                                        <span class="video-link-popin button" data-link="{{ item["id"] }}">
                                            Regarder la vidéo
                                        </span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    {% else %}
        <div class="value-search">
            Votre recherche n'as renvoyé aucun résultat Youtube
        </div>
    {% endif %}
</div>
<script type="text/javascript" src="{{ asset('js/overlay/popinyoutube.js') }}"></script>
<div class="overlay-youtube">
    <div class="close button">
        Fermer
    </div>
    <div class="video">
        <iframe width="420" height="315" id="video-popin" src="">
        </iframe>
    </div>
</div>
